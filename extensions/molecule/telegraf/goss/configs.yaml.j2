file:

  # Default - Dict
  {{ tests_dir }}/default/dict:
    exists: true
    filetype: file
    owner: root
    group: root
    mode: "0644"
    contents: |
      [agent]
      hostname = "test.manala.dev"
      metric_batch_size = 1234
      quiet = true

      [global_tags]
      foo = "bar"

      [[inputs.cpu]]
      
      [[outputs.file]]
      files = ["/dev/null"]
  # Default - Content
  {{ tests_dir }}/default/content:
    exists: true
    filetype: file
    owner: root
    group: root
    mode: "0644"
    contents: |
      Content
  # Default - Template
  {{ tests_dir }}/default/template:
    exists: true
