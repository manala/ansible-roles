---

package:
  galera-3:
    installed: true
  galera-arbitrator-3:
    installed: true
  mysql-wsrep-server-5.6:
    installed: true
  mysql-wsrep-client-5.6:
    installed: true

command:
  mysql --version:
    exit-status: 0
    stdout:
      - "/mysql(.)*Distrib 5.6/"
  mysql -u root --execute "select user from mysql.user":
    exit-status: 0
    stdout:
      - foo
      - "!bar"
      - baz
  mysqladmin  --user=foo --password=foo ping:
    exit-status: 0
    stdout:
      - "mysqld is alive"
  mysqladmin  --user=baz --password=baz ping:
    exit-status: 0
    stdout:
      - "mysqld is alive"
  mysql -u root --execute "show databases":
    exit-status: 0
    stdout:
      - foo
      - "!bar"
      - baz

service:
  mysql:
    enabled: true
    running: true
