{%- import '_macros.j2' as macros with context -%}

{%- set config = elao_ssh_config_sshd -%}

# What ports, IPs and protocols we listen for
{{ macros.config_row(config, 'Port', 22) }}
# Use these options to restrict which interfaces/protocols sshd will bind to
{{ macros.config_row(config, 'ListenAddress', '#ListenAddress ::\n#ListenAddress 0.0.0.0', true) }}
{{ macros.config_row(config, 'Protocol', 2) }}
# HostKeys for protocol version 2
{{ macros.config_row(config, 'HostKey', [
    '/etc/ssh/ssh_host_rsa_key',
    '/etc/ssh/ssh_host_dsa_key',
    '/etc/ssh/ssh_host_ecdsa_key'
]) }}
#Privilege Separation is turned on for security
{{ macros.config_row(config, 'UsePrivilegeSeparation', true) }}

# Lifetime and size of ephemeral version 1 server key
{{ macros.config_row(config, 'KeyRegenerationInterval', 3600) }}
{{ macros.config_row(config, 'ServerKeyBits', 768) }}

# Logging
{{ macros.config_row(config, 'SyslogFacility', 'AUTH') }}
{{ macros.config_row(config, 'LogLevel', 'INFO') }}

# Authentication:
{{ macros.config_row(config, 'LoginGraceTime', 120) }}
{{ macros.config_row(config, 'PermitRootLogin', true) }}
{{ macros.config_row(config, 'StrictModes', true) }}

{{ macros.config_row(config, 'RSAAuthentication', true) }}
{{ macros.config_row(config, 'PubkeyAuthentication', true) }}
{{ macros.config_row(config, 'AuthorizedKeysFile', '#AuthorizedKeysFile %h/.ssh/authorized_keys', true) }}

# Don't read the user's ~/.rhosts and ~/.shosts files
{{ macros.config_row(config, 'IgnoreRhosts', true) }}
# For this to work you will also need host keys in /etc/ssh_known_hosts
{{ macros.config_row(config, 'RhostsRSAAuthentication', false) }}
# similar for protocol version 2
{{ macros.config_row(config, 'HostbasedAuthentication', false) }}
# Uncomment if you don't trust ~/.ssh/known_hosts for RhostsRSAAuthentication
{{ macros.config_row(config, 'IgnoreUserKnownHosts', '#IgnoreUserKnownHosts yes', true) }}

# To enable empty passwords, change to yes (NOT RECOMMENDED)
{{ macros.config_row(config, 'PermitEmptyPasswords', false) }}

# Change to yes to enable challenge-response passwords (beware issues with
# some PAM modules and threads)
{{ macros.config_row(config, 'ChallengeResponseAuthentication', false) }}

# Change to no to disable tunnelled clear text passwords
{{ macros.config_row(config, 'PasswordAuthentication', false) }}

# Kerberos options
{{ macros.config_row(config, 'KerberosAuthentication', '#KerberosAuthentication no', true) }}
{{ macros.config_row(config, 'KerberosGetAFSToken', '#KerberosGetAFSToken no', true) }}
{{ macros.config_row(config, 'KerberosOrLocalPasswd', '#KerberosOrLocalPasswd yes', true) }}
{{ macros.config_row(config, 'KerberosTicketCleanup', '#KerberosTicketCleanup yes', true) }}

# GSSAPI options
{{ macros.config_row(config, 'GSSAPIAuthentication', '#GSSAPIAuthentication no', true) }}
{{ macros.config_row(config, 'GSSAPICleanupCredentials', '#GSSAPICleanupCredentials yes', true) }}

{{ macros.config_row(config, 'X11Forwarding', true) }}
{{ macros.config_row(config, 'X11DisplayOffset', 10) }}
{{ macros.config_row(config, 'PrintMotd', false) }}
{{ macros.config_row(config, 'PrintLastLog', true) }}
{{ macros.config_row(config, 'TCPKeepAlive', true) }}
{{ macros.config_row(config, 'UseLogin', '#UseLogin no', true) }}

{{ macros.config_row(config, 'MaxStartups', '#MaxStartups 10:30:60', true) }}
{{ macros.config_row(config, 'Banner', '#Banner /etc/issue.net', true) }}

# Allow client to pass locale environment variables
{{ macros.config_row(config, 'AcceptEnv', '') }}

{{ macros.config_row(config, 'Subsystem', 'sftp /usr/lib/openssh/sftp-server') }}
{{ macros.config_row(config, 'ClientAliveInterval', 30) }}

# Set this to 'yes' to enable PAM authentication, account processing,
# and session processing. If this is enabled, PAM authentication will
# be allowed through the ChallengeResponseAuthentication and
# PasswordAuthentication.  Depending on your PAM configuration,
# PAM authentication via ChallengeResponseAuthentication may bypass
# the setting of "PermitRootLogin without-password".
# If you just want the PAM account and session checks to run without
# PAM authentication, then enable this but set PasswordAuthentication
# and ChallengeResponseAuthentication to 'no'.
{{ macros.config_row(config, 'UsePAM', true) }}

{{ macros.config_row(config, 'UseDNS', false) }}

